{
  "name": "tintin-linting",
  "displayName": "Tintin++ Linting",
  "description": "Linting diagnostics for Tintin++ scripts.",
  "version": "0.2.0",
  "publisher": "your-name",
  "repository": {
    "type": "git",
    "url": "https://github.com/sfumato00/tintin-linting.git"
  },
  "homepage": "https://github.com/sfumato00/tintin-linting",
  "bugs": {
    "url": "https://github.com/sfumato00/tintin-linting/issues"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:tintin"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "tintin",
        "aliases": [
          "Tintin++",
          "Tintin"
        ],
        "extensions": [
          ".tt",
          ".tin",
          ".tintin"
        ]
      }
    ],
    "grammars": [
      {
        "language": "tintin",
        "scopeName": "source.tintin",
        "path": "./syntaxes/tintin.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "Tintin++ Linting",
      "properties": {
        "tintinLint.maxLineLength": {
          "type": "number",
          "default": 120,
          "description": "Maximum line length before a warning is shown."
        },
        "tintinLint.disallowTabs": {
          "type": "boolean",
          "default": true,
          "description": "Warn when a tab character is found."
        },
        "tintinLint.warnOnTrailingWhitespace": {
          "type": "boolean",
          "default": true,
          "description": "Warn when trailing whitespace is found."
        },
        "tintinFormat.indentSize": {
          "type": "number",
          "default": 2,
          "description": "Indentation size for formatting."
        },
        "tintinFormat.insertSpaces": {
          "type": "boolean",
          "default": true,
          "description": "Replace tabs with spaces during formatting."
        },
        "tintinFormat.commandCase": {
          "type": "string",
          "enum": ["lower", "upper", "preserve"],
          "default": "upper",
          "description": "Command casing to enforce during formatting."
        },
        "tintinFormat.trimTrailingWhitespace": {
          "type": "boolean",
          "default": true,
          "description": "Trim trailing whitespace during formatting."
        },
        "tintinLint.enforceUppercaseCommands": {
          "type": "boolean",
          "default": true,
          "description": "Warn when commands (starting with #) are not uppercase."
        },
        "tintinLint.validateCommands": {
          "type": "boolean",
          "default": true,
          "description": "Warn when a command is not recognized as a valid Tintin++ command."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./ && npm run package",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "mocha -r ts-node/register test/**/*.test.ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.17.0",
    "@types/vscode": "^1.80.0",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@vscode/vsce": "^3.7.1"
  }
}
